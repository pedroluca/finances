{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "api/**/*",
    "src/services/**/*.service.ts",
    "src/lib/db.ts",
    "src/types/**/*"
  ],
  "exclude": ["node_modules"]
}
